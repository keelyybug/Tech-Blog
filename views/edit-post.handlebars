<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.post_title}}" class="form-input" />
        <label class="form-label" for="post-content">Content</label>
        <input name="post-content" type="text" value="{{post.post_content}}" class="form-input" />
        <button type="submit" id="delete-btn" class="btn">Update Post</button>
        <button type="button" id="delete-btn" class="delete-post-btn btn">Delete Post</button>
    </form>
</div>


<script src="../js/edit-post.js"></script>
